{
    "linters": {
        "enable": [
            "govet",
            "errcheck",
            "staticcheck",
            "unused",
            "gosimple",
            "structcheck",
            "varcheck",
            "ineffassign",
            "deadcode",
            "typecheck",
            "bodyclose",
            "golint",
            "rowserrcheck",
            "stylecheck",
            "gosec",
            "interfacer",
            "unconvert",
            "dupl",
            "goconst",
            "gocyclo",
            "gocognit",
            "gofmt",
            "goimports",
            "maligned",
            "depguard",
            "misspell",
            "lll",
            "unparam",
            "dogsled",
            "prealloc",
            "scopelint",
            "gocritic",
            "gochecknoinits",
            "gochecknoglobals",
            "godox",
            "funlen",
            "whitespace",
            "wsl",
            "goprintffuncname"
        ]
    },
    "issues": {
        "exclude-rules": [
            {
                "path": "_test.go",
                "linters": [
                    "errcheck",
                    "funlen",
                    "goconst",
                    "lll"
                ]
            }
        ]
    }
}